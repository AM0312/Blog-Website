<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post" class="form-floating">
    <div class="form-group">
        <label for="titleCompose">Title</label>
        <input type="text" name="composeTitle" id="titleCompose" class="form-control">    
    </div>
    <div class="form-group">
        <label for="postCompose">Post</label>
        <textarea rows="5" type="text" name="composePost" id="postCompose" class="form-control"></textarea>    
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>